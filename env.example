# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (PostgreSQL)
# Option 1: Railway / Heroku / Cloud Provider (DATABASE_URL hat Priorität)
DATABASE_URL=postgresql://user:password@host:port/database

# Option 2: Einzelne Umgebungsvariablen (für lokale Entwicklung)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=browsergame_db
DB_USER=postgres
DB_PASSWORD=postgres

# Database Type (postgresql, sqlite, mock)
DB_TYPE=postgresql

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# WebSocket Configuration
WS_PORT=5001




